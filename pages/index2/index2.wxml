<!--pages/index2/index2.wxml-->
<!--tag filter-->
<scroll-view scroll-x class='tagfilter' style="width: 100%">
  <view class="row">
    <view wx:for="{{tag}}" wx:key>
   <navigator url="../../pages/index2/filter/filter?id={{item}}"><button class='tag'>#{{item}}</button></navigator> 
    </view> 
  </view>
</scroll-view>
<!--container for loges-->
<view class='part1 center'>
<view class ="row">
<view class='title1'>房源</view></view>
  <view wx:for="{{allHouses}}" wx:key>
      <view class ="part2 row">
      <image class="emage" src='../../images/plat1.jpg'></image>
       <view class='part3'>
        <view class='title2'>{{item.title}}</view>
        <view class='little'>{{item.description}}</view>
        <view class='little'>{{item.surface}} m²</view>
        <view class ="row">
          <view class='price'>€{{item.price}}</view>
          <view class='little nearby'>/月</view>
        </view>
       </view></view> 
    </view> 
</view>
<view class="float_button">
  <navigator url="../../pages/index2/myloge/myloge"> 
      <button>我要发布</button>
  </navigator>
</view>