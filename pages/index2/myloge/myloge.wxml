<!--pages/index2/myloge/myloge.wxml-->
<text>发布租房信息</text>
<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section">
    <view class="section__title">标题</view>
    <input name="name" placeholder="please input here" />
    <view class="section__title">描述</view>
    <textarea name="discription" auto-height placeholder="please input here" />
    <view class="section__title">地点</view>
    <input name="location" placeholder="please input here" />
    <view class="section__title">月租金</view>
    <input name="price" type="number" placeholder="please input here" />
    <view class="section__title">联系人</view>
    <input name="contactName" placeholder="please input here" />
    <view class="section__title">电话</view>
    <input name="contactNum" type="number" placeholder="please input here" />
    <view class="section__title">微信</view>
    <input name="contactWechat" placeholder="please input here" />
  </view>
  <view class="section section_gap">
    <view class="section__title">类型</view>
    <radio-group name="radio-group">
      <label><radio value="true"/>长租</label>
      <label><radio value="false"/>短租</label>
    </radio-group>
  </view>
  <view class="section section_gap">
    <view class="section__title">tag</view>
    <checkbox-group name="checkbox">
      <label><checkbox value="tag1"/>tag1</label>
      <label><checkbox value="tag2"/>tag2</label>
    </checkbox-group>
  </view>
  <view class="btn-area">
    <button bindtap="uploadPhoto">上传图片</button>
    <button formType="submit">发布信息</button>
    <button formType="reset">全部重置</button>
  </view>
</form>